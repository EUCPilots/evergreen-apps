{
    "Name": "Google Chrome Enterprise",
    "Source": "https://cloud.google.com/chrome-enterprise/browser/download/",
    "Get": {
        "Update": {
            "Uri": "https://versionhistory.googleapis.com/v1/chrome/platforms/win64/channels/#channel/versions?order_by=version%20desc",
            "ReleaseUri": "https://versionhistory.googleapis.com/v1/chrome/platforms/#platform/channels/#channel/versions/all/releases?filter=version=#version",
            "Channels": [
                "Extended",
                "Stable",
                "Beta",
                "Dev",
                "Canary"
            ],
            "Platforms": [
                "win",
                "win64",
                "win_arm64"
            ]
        },
        "Download": {
            "Uri": {
                "Extended": {
                    "win_arm64": [
                        "https://dl.google.com/dl/chrome/install/extended/googlechromeenterprisebundle_arm64.zip",
                        "https://dl.google.com/dl/chrome/install/extended/googlechromestandaloneenterprise_arm64.msi"
                    ],
                    "win64": [
                        "https://dl.google.com/dl/chrome/install/extended/googlechromestandaloneenterprise64.msi",
                        "https://dl.google.com/dl/chrome/install/extended/googlechromeenterprisebundle64.zip"
                    ],
                    "win": [
                        "https://dl.google.com/dl/chrome/install/extended/googlechromestandaloneenterprise.msi",
                        "https://dl.google.com/dl/chrome/install/extended/googlechromeenterprisebundle.zip"
                    ]
                },
                "Stable": {
                    "win_arm64": [
                        "https://dl.google.com/dl/chrome/install/googlechromeenterprisebundle_arm64.zip",
                        "https://dl.google.com/dl/chrome/install/googlechromestandaloneenterprise_arm64.msi"
                    ],
                    "win64": [
                        "https://dl.google.com/dl/chrome/install/googlechromestandaloneenterprise64.msi",
                        "https://dl.google.com/dl/chrome/install/googlechromeenterprisebundle64.zip"
                    ],
                    "win": [
                        "https://dl.google.com/dl/chrome/install/googlechromestandaloneenterprise.msi",
                        "https://dl.google.com/dl/chrome/install/googlechromeenterprisebundle.zip"
                    ]
                },
                "Beta": {
                    "win_arm64": [
                        "https://dl.google.com/dl/chrome/install/beta/googlechromebetastandaloneenterprise_arm64.msi"
                    ],
                    "win64": [
                        "https://dl.google.com/dl/chrome/install/beta/googlechromebetastandaloneenterprise64.msi"
                    ],
                    "win": [
                        "https://dl.google.com/dl/chrome/install/beta/googlechromebetastandaloneenterprise.msi"
                    ]
                },
                "Dev": {
                    "win64": [
                        "https://dl.google.com/dl/chrome/install/dev/googlechromedevstandaloneenterprise64.msi"
                    ],
                    "win": [
                        "https://dl.google.com/dl/chrome/install/dev/googlechromedevstandaloneenterprise.msi"
                    ]
                },
                "Canary": {
                    "win64": [
                        "https://dl.google.com/update2/installers/chromesetup.exe"
                    ]
                }
            }
        }
    },
    "Install": {
        "Setup": "googlechrome*standaloneenterprise*.msi",
        "Physical": {
            "Arguments": "/qn",
            "PostInstall": []
        },
        "Virtual": {
            "Arguments": "/qn",
            "PostInstall": [
                "REG ADD \"HKLM\\SOFTWARE\\Policies\\Google\\Update\" /v \"UpdateDefault\" /t REG_DWORD /d 0 /f",
                "REG ADD \"HKLM\\SOFTWARE\\Policies\\Google\\Update\" /v \"DisableAutoUpdateChecksCheckboxValue\" /t REG_DWORD /d 1 /f",
                "REG ADD \"HKLM\\SOFTWARE\\Policies\\Google\\Update\" /v \"AutoUpdateCheckPeriodMinutes\" /t REG_DWORD /d 0 /f",
                "REG ADD \"HKLM\\SOFTWARE\\Wow6432Node\\Google\\Update\" /v \"UpdateDefault\" /t REG_DWORD /d 0 /f",
                "REG ADD \"HKLM\\SOFTWARE\\Wow6432Node\\Google\\Update\" /v \"DisableAutoUpdateChecksCheckboxValue\" /t REG_DWORD /d 1 /f",
                "REG ADD \"HKLM\\SOFTWARE\\Wow6432Node\\Google\\Update\" /v \"AutoUpdateCheckPeriodMinutes\" /t REG_DWORD /d 0 /f"
            ]
        }
    }
}