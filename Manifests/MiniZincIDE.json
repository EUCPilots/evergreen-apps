{
	"Name": "MiniZinc IDE",
	"Source": "https://www.minizinc.org/",

	"Get": {
		"Uri": "https://api.github.com/repos/MiniZinc/MiniZincIDE/releases/latest",
		"MatchVersion": "(\\d+(\\.\\d+){1,4}).*",
		"MatchFileTypes": "\\.exe$"
	},
	"Install": {
		"Setup": "MiniZincIDE*.exe",
		"Physical": {
			"Arguments": "/VERYSILENT /NORESTART /NOCANCEL /SP-",
			"PostInstall": []
		},
		"Virtual": {
			"Arguments": "/VERYSILENT /NORESTART /NOCANCEL /SP-",
			"PostInstall": []
		}
	}
}
