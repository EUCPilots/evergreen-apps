{
    "Name": "OBS Studio",
    "Source": "https://obsproject.com/",
    "Get": {
        "Update": {
            "Uri": "https://obsproject.com/update_studio/manifest.json",
            "ContentType": "application/octet-stream",
            "Properties": [
                "version_major",
                "version_minor",
                "version_patch"
            ]
        },
        "Download": {
            "Uri": "https://cdn-fastly.obsproject.com/downloads/#FileName",
            "FileName": "OBS-Studio-#Version-Full-Installer-#Architecture.exe",
            "Architectures": [
                "x64"
            ],
            "ReplaceText": {
                "Version": "#Version",
                "FileName": "#FileName",
                "Architecture": "#Architecture"
            }
        }
    },
    "Install": {
        "Setup": "OBS-Studio.*.exe",
        "Physical": {
            "Arguments": "",
            "PostInstall": []
        },
        "Virtual": {
            "Arguments": "",
            "PostInstall": []
        }
    }
}
